extends layout

block content
	h1= title

	form(method="post" action=`/books/${book.id}` onsubmit="return confirm('Do you really want to update this book?');")
		p
			label(for="title") Title

			input(name="title" type="text" id="title" value= book.title required)

		p
			label(for="author") Author

			input(name="author" type="text" id="author" value= book.author required)

		p
			label(for="genre") Genre

			input(name="genre" type="text" id="genre" value= book.genre)

		p
			label(for="year") Year

			input(name="year" type="text" id="year" value= book.year)

		p
			input(type="submit" value="Update Book")

	form(method="post" action=`/books/${book.id}/delete` onsubmit="return confirm('Do you really want to delete this book?');")
		p
			a(class="button" href="/books") Cancel 

		p
			input(type="submit" value="Delete Book")