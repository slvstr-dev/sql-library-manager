extends layout

block content
    h1 Update Book
    form
        p
            label(for="title") Title
            input(name="title" type="text" id="title" value="The Hunger Games")

        p
            label(for="author") Author
            input name="author" type="text" id="author" value="Suzanne Collins")

        p
            label(for="genre") Genre
            input(name="genre" type="text" id="genre" value="Fantasy")

        p
            label(for="year") Year
            input(name="year" type="text" id="year" value="2008")

        p
            input(type="submit" value="Update Book")

    form(method="post" action="/books/8/delete" onsubmit="return confirm('Do you really want to delete this book?');")
        p
            a(class="button" href="all_books.html") Cancel 

        p
            input(type="submit" value="Delete Book")